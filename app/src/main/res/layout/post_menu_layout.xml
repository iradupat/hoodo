<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF0F0">

    <View
        android:id="@+id/post_menu_wandering_btn"
        android:layout_width="260dp"
        android:layout_height="107dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="142dp"
        android:background="#DECCCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_menu_found_btn" />

    <View
        android:id="@+id/post_menu_missing_btn"
        android:layout_width="254dp"
        android:layout_height="103dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="8dp"
        android:background="#DECCCC"
        app:layout_constraintBottom_toTopOf="@+id/post_menu_found_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/post_menu_found_btn"
        android:layout_width="257dp"
        android:layout_height="103dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="8dp"
        android:background="#DECCCC"
        app:layout_constraintBottom_toTopOf="@+id/post_menu_wandering_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_menu_missing_btn" />

    <View
        android:id="@+id/view11"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/post_menu_missing_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_menu_missing_text"
        android:textColor="#5D4037"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_menu_missing_btn"
        app:layout_constraintEnd_toEndOf="@+id/post_menu_missing_btn"
        app:layout_constraintStart_toStartOf="@+id/post_menu_missing_btn"
        app:layout_constraintTop_toTopOf="@+id/post_menu_missing_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_menu_found_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_menu_found_btn"
        app:layout_constraintEnd_toEndOf="@+id/post_menu_found_btn"
        app:layout_constraintStart_toStartOf="@+id/post_menu_found_btn"
        app:layout_constraintTop_toTopOf="@+id/post_menu_found_btn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_menu_wandering_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_menu_wandering_btn"
        app:layout_constraintEnd_toEndOf="@+id/post_menu_wandering_btn"
        app:layout_constraintStart_toStartOf="@+id/post_menu_wandering_btn"
        app:layout_constraintTop_toTopOf="@+id/post_menu_wandering_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>